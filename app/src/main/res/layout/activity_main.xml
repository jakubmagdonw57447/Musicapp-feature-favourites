       tools:layout_editor_absoluteX="5dp"
       tools:layout_editor_absoluteY="16dp" />

   <Button
       android:id="@+id/bFavourites"
       android:layout_width="283dp"
       android:layout_height="70dp"
       android:layout_marginTop="104dp"
       android:layout_weight="2"
